@code {
    private UserModel? CurrentUser;
    private List<GoalModel> AllGoals = new();
    private List<GoalModel> ActiveGoals = new();
    private List<GoalModel> CompletedGoals = new();
    private int Rating = 0;

    protected override async Task OnInitializedAsync()
    {
        CurrentUser = await UserService.GetCurrentUser();
        if (CurrentUser is null || !UserService.IsChild())
        {
            Navigation.NavigateTo("/login");
            return;
        }

        // Load all goals
        var goalList = await GoalService.GetGoalsAsync();
        AllGoals = goalList.ToList();

        // Separate active and completed
        ActiveGoals = AllGoals.Where(g => string.Equals(g.Status, "Active", StringComparison.OrdinalIgnoreCase)).ToList();
        CompletedGoals = AllGoals.Where(g => string.Equals(g.Status, "Completed", StringComparison.OrdinalIgnoreCase)).ToList();

        // Calculate simple rating (1 star per 50 coins, max 5)
        Rating = Math.Min(5, (CurrentUser.Coins / 50) + 1);
    }

    private void CreateNewGoal()
    {
        Navigation.NavigateTo("/goal/create");
    }

    private void ComparePrices()
    {
        Navigation.NavigateTo("/shop/compare");
    }

    private void Logout()
    {
        Navigation.NavigateTo("/login");
    }
}

<style>
.child-dashboard {
    max-width: 900px;
    margin: 0 auto;
    padding: 16px;
}

.character-section {
    background: linear-gradient(135deg, #fef3c7, #fde68a);
    border: 3px solid #fcd34d;
    padding: 24px;
    margin-bottom: 16px;
    text-align: center;
    border-radius: 12px;
}

.actions-section {
    margin-bottom: 16px;
    padding: 16px;
}

.btn-large {
    padding: 12px 20px;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1em;
    transition: transform 0.2s, box-shadow 0.2s;
}

.btn-large:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
}

.btn-large.btn-logout {
    background: linear-gradient(135deg, #ef4444, #dc2626);
}

.btn-large.btn-logout:hover {
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
}

.btn-small-outline {
    padding: 8px 16px;
    background: transparent;
    color: #3b82f6;
    border: 2px solid #3b82f6;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
}

.btn-small-outline:hover {
    background: #eff6ff;
}

.goals-section {
    margin-bottom: 16px;
}

.goals-section h4 {
    margin-top: 0;
}

.goals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 16px;
}

.goal-item {
    background: #f0f9ff;
    padding: 12px;
    border-radius: 8px;
    border: 2px solid #bfdbfe;
}

.goal-item.animated {
    animation: slideIn 0.4s ease-out;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.progress-section {
    background: linear-gradient(135deg, #f3e8ff, #e9d5ff);
    border: 2px solid #ddd6fe;
}

.stat-box {
    background: white;
    padding: 16px;
    border-radius: 8px;
    text-align: center;
    border: 1px solid #e5e7eb;
}

.stat-label {
    font-size: 0.9em;
    color: #666;
    margin-bottom: 8px;
}

.stat-value {
    font-size: 1.8em;
    font-weight: bold;
    color: #5b5ef5;
}

@media (max-width: 640px) {
    .child-dashboard {
        padding: 8px;
    }

    .goals-grid {
        grid-template-columns: 1fr;
    }

    .btn-large {
        width: 100%;
        padding: 14px;
    }

    .stat-box {
        padding: 12px;
    }

    .stat-value {
        font-size: 1.5em;
    }
}
