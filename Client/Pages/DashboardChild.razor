    <!-- Active Goals Section -->
    <div class="card goals-section">
        <h4>–ê–∫—Ç–∏–≤–Ω—ã–µ —Ü–µ–ª–∏</h4>
        @if (ActiveGoals == null || !ActiveGoals.Any())
        {
            <div style="text-align:center; padding:24px; color:#999">
                <p style="font-size:3em">üéØ</p>
